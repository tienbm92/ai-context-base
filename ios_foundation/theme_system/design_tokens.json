{
  "$schema": "https://json-schema.org/draft-07/schema",
  "id": "ios.design_tokens.v1",
  "version": "1.0.0",
  "platform_agnostic": true,
  
  "colors": {
    "light_mode": {
      "primary": "#007AFF",
      "secondary": "#8E8E93",
      "success": "#34C759",
      "error": "#FF3B30",
      "warning": "#FF9500",
      "background": "#FFFFFF",
      "surface": "#F2F2F7",
      "text_primary": "#000000",
      "text_secondary": "#3C3C4399",
      "border": "#C6C6C8"
    },
    "dark_mode": {
      "primary": "#0A84FF",
      "secondary": "#8E8E93",
      "success": "#32D74B",
      "error": "#FF453A",
      "warning": "#FF9F0A",
      "background": "#000000",
      "surface": "#1C1C1E",
      "text_primary": "#FFFFFF",
      "text_secondary": "#EBEBF599",
      "border": "#38383A"
    }
  },
  
  "typography": {
    "font_family": "SF Pro Text",
    "sizes": {
      "h1": {"size": 32, "weight": 700, "line_height": 40},
      "h2": {"size": 28, "weight": 700, "line_height": 36},
      "h3": {"size": 24, "weight": 700, "line_height": 32},
      "h4": {"size": 20, "weight": 600, "line_height": 28},
      "h5": {"size": 16, "weight": 600, "line_height": 24},
      "h6": {"size": 14, "weight": 600, "line_height": 20},
      "body1": {"size": 16, "weight": 400, "line_height": 24},
      "body2": {"size": 14, "weight": 400, "line_height": 20},
      "caption": {"size": 12, "weight": 400, "line_height": 16},
      "button": {"size": 14, "weight": 600, "line_height": 16}
    }
  },
  
  "spacing": {
    "xs": 4,
    "sm": 8,
    "md": 16,
    "lg": 24,
    "xl": 32,
    "xxl": 48
  },
  
  "components": {
    "button": {
      "border_radius": 8,
      "padding_horizontal": 16,
      "padding_vertical": 12,
      "min_height": 44,
      "glass_styles": {
        "glass": {
          "description": "Standard Liquid Glass button",
          "api": ".buttonStyle(.glass)"
        },
        "glass_prominent": {
          "description": "Prominent Liquid Glass button for CTAs",
          "api": ".buttonStyle(.glassProminent)"
        }
      }
    },
    "card": {
      "border_radius": 12,
      "padding": 16,
      "elevation": 2
    },
    "input": {
      "border_radius": 8,
      "padding": 12,
      "border_width": 1,
      "min_height": 44
    }
  },
  
  "liquid_glass": {
    "description": "Liquid Glass material properties for iOS 26+",
    "material": {
      "type": "translucent_glass",
      "properties": [
        "Reflects surrounding content and wallpaper",
        "Refracts content behind it",
        "Specular highlights react to movement",
        "Dynamically adapts to light/dark environments"
      ]
    },
    "blur_radius": {
      "light": 30,
      "medium": 50,
      "heavy": 80
    },
    "opacity": {
      "base": 0.7,
      "focus": 0.85,
      "overlap": 0.9
    },
    "corner_radius": {
      "description": "Concentric with hardware curvature",
      "small": 8,
      "medium": 12,
      "large": 16,
      "extra_large": 20,
      "sheet": 24
    },
    "layer_elevation": {
      "content": 0,
      "controls": 10,
      "navigation": 20,
      "modal": 30
    },
    "swiftui_apis": {
      "glass_effect": ".glassEffect(.regularMaterial, in: shape)",
      "button_glass": ".buttonStyle(.glass)",
      "button_glass_prominent": ".buttonStyle(.glassProminent)",
      "safe_area_bar": ".safeAreaBar(edge:alignment:spacing:content:)",
      "background_extension": ".backgroundExtensionEffect()",
      "scroll_edge_effect": ".scrollEdgeEffectStyle(_:for:)",
      "concentric_rectangle": "ConcentricRectangle(corners:isUniform:)"
    }
  },
  
  "spacing_liquid_glass": {
    "description": "Updated spacing for Liquid Glass (larger row heights, more padding)",
    "list_row_height": 56,
    "list_section_header": 32,
    "list_section_padding": 20,
    "toolbar_height": 52,
    "tab_bar_height": 60
  }
}
